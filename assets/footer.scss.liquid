
#shopify-section-newsletter {
    .newsletter-grid__item:first-child {
      background: url("newsletter-fond.jpg") no-repeat;
      background-size: cover !important;
      width: 61%;
    }
    .newsletter-grid__item:last-child {
      background-color: {{ settings.$color_secondary }};
      width: 39%;
    }
    .newsletter-content-wrapper {
        padding: 38px 40px 30px;
        .newsletter-content {
            .section-header {
                h2 {
                    text-align: center;
                    font-size: {{ settings.$big-size }}px;
                    line-height: 1;
                    font-family: 'abhaya_librebold';
                    margin-bottom: 5px;
                }
            }
            p {
                font-size: {{ settings.$font-size-base }}px;
                line-height: 20px;
                max-width: 260px;
                float: right;
                margin-right: 20px;
            }
            .input-group {
                .input-group-btn {
                    .btn {
                        font-size: {{ settings.$font-size-base }}px;
                        width: 100%;
                    }
                }

            }

        }
    }

}


#shopify-section-footer {
    .social-icons {
    .icon {
        &:before {
            display: none !important;
        }
        width: 30px;
        height: 30px;
    }
        .icon-facebook {
            background: url("Reseau-face.svg");
        }
        .icon-pinterest {
         background: url("Reseau-pinterest.svg");
         }
        .icon-instagram {
        background: url("Reseau-instagram.svg");
        }
        .icon-youtube {
        background: url("Reseau-youtube.svg");
        }
    }

    .form-vertical {
        input.btn {
        width: 100%;
        }
    }
}