
#shopify-section-footer {
    .small-title {
        font-size: 30px;
        font-family: 'abhaya_librebold';
    }
    .site-footer__links {
        a {
            font-size: {{ settings.$font-size-base }}px;
        }
    }
    .social-icons {
        .icon-facebook {
            background: url("Reseau-face.svg");
            width: 30px;
            height: 30px;
            &:before {
                display: none !important;
            }
        }

        .icon-instagram {
            background: url("Reseau-instagram.svg");
            width: 30px;
            height: 30px;
            &:before {
                display: none !important;
            }
        }

    }

    .form-vertical {
        input.btn {
            width: 100%;
        }
    }
     .payment-icons {
        border-top: 1px solid #ebebeb;
        padding-top: 15px;
     }

     #contact_form {
     }
}