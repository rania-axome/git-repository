
#shopify-section-footer {
    .small-title {
        font-size: 30px;
        font-family: 'abhaya_librebold';
    }
    .site-footer__links {
        a {
            font-size: {{ settings.$font-size-base }}px -2;
        }
    }
    .social-icons {
    .icon {
        &:before {
            display: none !important;
        }
        width: 30px;
        height: 30px;
    }
        .icon-facebook {
            background: url("Reseau-face.svg");
        }
        .icon-pinterest {
         background: url("Reseau-pinterest.svg");
         }
        .icon-instagram {
        background: url("Reseau-instagram.svg");
        }
        .icon-youtube {
        background: url("Reseau-youtube.svg");
        }
    }

    .form-vertical {
        input.btn {
        width: 100%;
        }
    }
}