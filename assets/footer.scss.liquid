
#shopify-section-footer {
    .small-title {
        font-size: 30px;
        font-family: 'abhaya_librebold';
        &.accordion-title {
            @media only screen and (max-width: 768px) {
                 margin-bottom: 0;
                 border-bottom: 1px solid #D9D7D1;
            }
        }
    }

    .site-footer {
        @media only screen and (max-width: 768px) {
            padding-top: 0;
        }
        .grid__item {
            @media only screen and (max-width: 768px) {
                margin-bottom: 0;
                &:last-of-type {
                    border-bottom: 0;
                }
                &.bloc-newsletter-footer {
                    text-align: left;
                    .small-title { border-top: 1px solid #D9D7D1;}
                }
            }
        }
    }
    .site-footer__links {
        a {
            font-size: {{ settings.$font-size-base }}px;
        }

        @media only screen and (max-width: 768px) {
            display: none;
        }
    }
    .social-icons {
        .icon-facebook {
            background: url("Reseau-face.svg");
            width: 30px;
            height: 30px;
            &:before {
                display: none !important;
            }
        }

        .icon-instagram {
            background: url("Reseau-instagram.svg");
            width: 30px;
            height: 30px;
            &:before {
                display: none !important;
            }
        }

    }

    .form-vertical {
        input.btn {
            width: 100%;
        }
    }
     .payment-icons {
        border-top: 1px solid #ebebeb;
        padding-top: 15px;
     }

     #contact_form {
        .input-group {
            @media only screen and (max-width: 767px) {
                display: block;
            }
            span.input-group-btn {
                @media only screen and (max-width: 767px) {
                    display: block;
                    width: 100%;
                    margin-top: 7px;
                }
                button#subscribe {
                    @media only screen and (max-width: 767px) {
                         width: 100%;
                    }

                }
            }

        }
     }
}