
#shopify-section-slider {
    .slides__title {
        font-size: 117px;
        font-family: 'abhaya_librebold';
    }
}

body.template-index {
    .featured-products-section {
        .grid__item {
            .grid-link__title {
                font-family: 'abhaya_librebold';
                font-size: {{ settings.$font-size-base }}px + 2;
            }
            .grid-link__meta {
                color: {{ settings.color_secondary }};
                font-size: {{ settings.$font-size-base }}px - 3;
            }
        }
    }
}


.home-seo {
    h1 {
        text-align: center;
    }
    p {
        max-width: 706px;
        margin: auto;
        line-height: 1.375;
    }
}


#shopify-section-newsletter {
    .newsletter-grid__item:first-child {
      background: url("newsletter-fond.jpg") no-repeat;
      background-size: cover !important;
      @media only screen and (min-width: 768px) {
        width: 61%;
      }

    }
    .newsletter-grid__item:last-child {
      background-color: {{ settings.$color_secondary }};
      @media only screen and (min-width: 768px) {
             width: 39%;
      }

    }
    .newsletter-content-wrapper {
        padding: 38px 40px 30px;
        .newsletter-content {
            .section-header {
                .page-heading {
                    text-align: center;
                    line-height: 1;
                    margin-bottom: 5px;
                }
            }
            p {
                font-size: {{ settings.$font-size-base }}px;
                line-height: 20px;
                max-width: 260px;
                float: right;
                margin-right: 20px;
            }
            .input-group {
                .input-group-btn {
                    .btn {
                        font-size: {{ settings.$font-size-base }}px;
                        width: 100%;
                    }
                }

            }

        }
    }

}
