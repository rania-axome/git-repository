
#shopify-section-slider {
    @media only screen and (min-width: 768px) {
      position: relative;
    }
    &::before {
        content: "";
        background: url("feuilles-slide1.png") no-repeat;
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        left: -175px;
        height: 547px;
        width: 298px;
        @media only screen and (max-width: 1200px) {
            left: -100px;
        }
        @media only screen and (max-width: 1024px) {
             left: 0;
        }
        @media only screen and (max-width: 992px) {
            display: none;
        }
    }
    &::after {
        content: "";
        background: url("feuilles-slide2.png") no-repeat;
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        right: -175px;
        height: 547px;
        width: 298px;
        @media only screen and (max-width: 1200px) {
            right: -100px;
        }
         @media only screen and (max-width: 1024px) {
            right: 0;
        }
        @media only screen and (max-width: 992px) {
            display: none;
        }
    }


    .slides__title {
        font-size: 117px;
        font-family: 'abhaya_librebold';
        line-height: 0.53;
        @media only screen and (max-width: 767px) {
            font-size: 60px;
        }
    }
    .slides_subtitle {
        font-size: {{ settings.$font-size-base }}px;
        text-transform: uppercase;
        margin-bottom: 28px;
    }
}

body.template-index {
    .featured-products-section {
        .grid__item {
            .grid-link__title {
                font-family: 'abhaya_librebold';
                font-size: {{ settings.$font-size-base }}px + 2;
            }
            .grid-link__meta {
                color: {{ settings.color_secondary }};
                font-size: {{ settings.$font-size-base }}px - 3;
            }
        }
    }
}


.home-seo {
    h1 {
        text-align: center;
    }
    p {
        max-width: 706px;
        margin: auto;
        line-height: 1.375;
    }
}


#shopify-section-newsletter {
    .newsletter-grid__item:first-child {
      background: url("newsletter-fond.jpg") no-repeat;
      background-size: cover !important;
      @media only screen and (min-width: 768px) {
        width: 61%;
      }

    }
    .newsletter-grid__item:last-child {
    position: relative;
      background-color: {{ settings.$color_secondary }};
      @media only screen and (min-width: 768px) {
             width: 39%;
      }

      &::before {
              content: "";
              background: url("feuilles-newsletter-exter.png") no-repeat;
              position: absolute;
              top: 50%;
              transform: translateY(-50%);
              right: -115px;
              height: 237px;
              width: 218px;
              @media only screen and (max-width: 1200px) {
                  right: -100px;
              }
              @media only screen and (max-width: 1024px) {
                   right: 0;
              }
              @media only screen and (max-width: 992px) {
                  display: none;
              }
          }

    }
    .newsletter-content-wrapper {
        padding: 38px 40px 30px;
        .newsletter-content {
            .section-header {
                .page-heading {
                    text-align: center;
                    line-height: 1;
                    margin-bottom: 5px;
                }
            }
            p {
                font-size: {{ settings.$font-size-base }}px;
                line-height: 20px;
                max-width: 260px;
                float: right;
                margin-right: 20px;
            }
            .input-group {
                .input-group-btn {
                    .btn {
                        font-size: {{ settings.$font-size-base }}px;
                        width: 100%;
                    }
                }

            }

        }
    }

}
