
#shopify-section-slider {
    @media only screen and (min-width: 768px) {
      position: relative;
    }
    &::before {
        content: "";
        background: url("feuilles-slide1.png") no-repeat;
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        left: -175px;
        height: 547px;
        width: 298px;
        @media only screen and (max-width: 1200px) {
            left: -100px;
        }
        @media only screen and (max-width: 1024px) {
             left: 0;
        }
        @media only screen and (max-width: 992px) {
            display: none;
        }
    }
    &::after {
        content: "";
        background: url("feuilles-slide2.png") no-repeat;
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        right: -175px;
        height: 547px;
        width: 298px;
        @media only screen and (max-width: 1200px) {
            right: -100px;
        }
         @media only screen and (max-width: 1024px) {
            right: 0;
        }
        @media only screen and (max-width: 992px) {
            display: none;
        }
    }

    .slides__text-content--mobile {
        @media only screen and (max-width: 767px) {
            width: 100%;
        }
    }
    .slides-text-content-wrapper-right {
        width: 100%;
    }
    .slides__title {
        font-size: 117px;
        font-family: 'abhaya_librebold';
        line-height: 0.85;
        @media only screen and (min-width: 769px) {
            margin-right: 65px;

        }
        @media only screen and (max-width: 767px) {
            font-size: 60px;
        }
    }
    .slides_subtitle,
     .slides_subtitle_mobile {
        font-size: {{ settings.$font-size-base }}px;
        line-height: 1;
        margin-top: 10px;
        text-transform: uppercase;
        margin-bottom: 28px;
        font-family: 'latoblack';
    }
    .slides_subtitle {
        @media only screen and (max-width: 768px) {
            display: none !important;
        }
    }
    .slides_subtitle_mobile {
        @media only screen and (max-width: 768px) {
            font-size: 14px;
        }
    }

    .slide-btn {
        text-align: center;
    }
    a.btn {
        min-width: 178px;
        height: 50px;
        line-height: 50px;
        padding: 0;
        font-size: 20px;
        text-transform: capitalize;
        font-family: Lato,sans-serif;
    }
    .slideshow-section {
         @media only screen and (max-width: 768px) {
            padding-bottom: 20px;
         }
    }
    .flex-control-paging li a.flex-active {
        background-color: {{ settings.color_secondary }};
        border: 2px solid #fff;
    }
}

body.template-index {
    .featured-products-section {
        .grid__item {
            .grid-link__title {
                font-family: 'abhaya_librebold';
                font-size: {{ settings.$font-size-base }}px + 2;
                margin-bottom: 0;
                line-height: 1;
            }
            .grid-link__meta {
                color: {{ settings.color_secondary }};
                font-size: {{ settings.$font-size-base }}px - 3;
            }
        }
    }
    .main-content {
        &::after {
            @media only screen and (max-width: 768px) {
                padding-top: 40px;
            }
        }
    }
}


.home-seo {
    margin-top: 20px;
    h1 {
        text-align: center;
    }
    p {
        max-width: 706px;
        margin: auto;
        line-height: 1.375;
         @media only screen and (max-width: 767px) {
             text-align: center;
         }
    }
}


#shopify-section-newsletter {
    .newsletter-grid__item:first-child {
        background: #E6E4E1;
        @media only screen and (min-width: 768px) {
            width: 61%;
            background: url("newsletter-fond.jpg") no-repeat;
            background-size: cover !important;
        }
    }
    .newsletter-grid__item:last-child {
    position: relative;
      background: url("feuilles-newsletter-inter.png") {{ settings.$color_secondary }} no-repeat;
      @media only screen and (min-width: 768px) {
             width: 39%;
      }

      &::before {
              content: "";
              background: url("feuilles-newsletter-exter.png") no-repeat;
              position: absolute;
              top: 50%;
              transform: translateY(-50%);
              right: -115px;
              height: 237px;
              width: 218px;
              @media only screen and (max-width: 1200px) {
                  right: -100px;
              }
              @media only screen and (max-width: 1024px) {
                   right: 0;
              }
              @media only screen and (max-width: 992px) {
                  display: none;
              }
          }

    }
    .newsletter-content-wrapper {
        padding: 38px 40px 30px;
        .newsletter-content {
            .section-header {
                .page-heading {
                    text-align: center;
                    line-height: 1;
                    margin-bottom: 5px;
                }
            }
            p {
                font-size: {{ settings.$font-size-base }}px;
                line-height: 20px;
                max-width: 260px;
                float: right;
                margin-right: 20px;
                @media only screen and (max-width: 797px) {
                    margin-right: 0;
                }
            }
            .input-group {
                .input-group-btn {
                    .btn {
                        width: 100%;
                    }
                }

            }

        }
    }

}
