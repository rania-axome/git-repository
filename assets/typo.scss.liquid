h1, h2, h3, h4, h5, h6 {
    font-family: 'abhaya_librebold';
}
.page-heading {
    font-size: {{ settings.$big-size }}px;
    font-family: 'abhaya_librebold';
    @media only screen and (max-width: 768px) {
        font-size: {{ settings.$big-size }}px - 5;
    }
}
.btn {
    font-family: 'latoblack';
    font-size: 13px;
    text-transform: uppercase;
}

.product-price {
    color: {{ settings.color_secondary }};
    font-size: 13px;
}

.product-name {
    font-size: 18px;
    font-family: 'abhaya_librebold' !important;

}