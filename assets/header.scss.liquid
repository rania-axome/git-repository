.header-bar {
    .cart-page-link {
    display: flex;
    align-items: center;
    text-transform: uppercase;
        img {
            width: 30px;
        }

    }
    .header-bar__search {
        @media screen and (min-width: 769px){
             max-width: 236px;
        }
        .header-bar__search-submit {
            right: 2px;
            top: 50%;
            transform: translateY(-50%);
            max-height: 100%;
            padding: 0;
            img {
                width: 30px;
            }
        }
        .header-bar__search-input {
            padding-left: 17px;
        }
    }


